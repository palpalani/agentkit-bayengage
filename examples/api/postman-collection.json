    },
    {
      "name": "Conversation Threading",
      "item": [
        {
          "name": "Step 1: Create Campaign",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.json().thread_id) {",
                  "    pm.collectionVariables.set('thread_id', pm.response.json().thread_id);",
                  "    console.log('Thread ID saved:', pm.response.json().thread_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_input\": \"Create a campaign named Test Campaign\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/chat",
              "host": ["{{base_url}}"],
              "path": ["api", "chat"]
            },
            "description": "First message in conversation"
          }
        },
        {
          "name": "Step 2: Follow-up",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_input\": \"Change the subject to Welcome Email\",\n  \"thread_id\": \"{{thread_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/chat",
              "host": ["{{base_url}}"],
              "path": ["api", "chat"]
            },
            "description": "Follow-up message using thread_id"
          }
        }
      ]
    }
  ]
}
