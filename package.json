{
  "name": "agentkit-bayengage",
  "version": "1.0.0",
  "description": "Production-ready OpenAI Agent implementation for BayEngage email marketing automation",
  "type": "module",
  "main": "dist/agent.js",
  "types": "dist/agent.d.ts",
  "exports": {
    ".": {
      "import": "./dist/agent.js",
      "types": "./dist/agent.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/server.ts",
    "dev": "node --watch --loader ts-node/esm src/server.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.md\" \"*.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.md\" \"*.json\"",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "npm run build"
  },
  "keywords": [
    "bayengage",
    "email-marketing",
    "openai",
    "agents",
    "ai",
    "automation",
    "marketing-automation"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@openai/agents": "^0.1.10",
    "axios": "^1.12.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  }
}
